<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="5dp"
    app:cardElevation="5dp"
    android:layout_margin="5dp"
    android:id="@+id/parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/mySaleTitleRelLayout">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Free Pizza @ ERB 123"
                android:textStyle="bold"
                android:textSize="15sp"
                android:id="@+id/txtSaleItemTitle"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="(xxx)"
                android:layout_marginStart="5dp"
                android:layout_toEndOf="@+id/txtSaleItemTitle"
                android:id="@+id/txtSaleStatus"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/mySaleInfoRelLayout"
            android:layout_below="@+id/titleRelLayout"
            android:layout_marginTop="15dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10$"
                android:id="@+id/txtSalePrice"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="02/19/2020"
                android:layout_alignParentEnd="true"
                android:id="@+id/txtSaleDate"/>
        </RelativeLayout>

    </RelativeLayout>





</com.google.android.material.card.MaterialCardView>