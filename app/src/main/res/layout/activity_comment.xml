<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.CreatePostActivity">

    <TextView
        android:id="@+id/txtNewComment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="New Comment"
        android:textAlignment="center"
        android:textSize="25sp"
        android:textStyle="bold" />




    <EditText
        android:id="@+id/edtTxtComment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="120dp"
        android:layout_marginRight="30dp"
        android:hint="Please type your comment here."
        android:inputType="textMultiLine"
        android:maxLines="5"
        android:minLines="1" />

    <RelativeLayout
        android:id="@+id/btnRelLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/radioRelLayout"
        android:layout_marginStart="20dp"
        android:layout_marginTop="259dp"
        android:gravity="center">


        <Button
            android:id="@+id/btnComment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/btnCancel"
            android:backgroundTint="#8BC34A"
            android:text="Comment" />


    </RelativeLayout>




</RelativeLayout>